= form_for @mailing do |f|
  - if @mailing.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mailing.errors.count, "error")} prohibited this mailing from being saved:"
      %ul
        - @mailing.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nom
    = f.text_field :nom
  .field
    = f.label :mail
    = f.text_field :mail
  .field
    = f.label "Type"
    = f.text_field :type_mailing
  .actions
    %button.btn.waves-effect.waves-light{:name => "action", :type => "submit"}
      = texte
