!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Mailiie
    %link{:href => "http://fonts.googleapis.com/icon?family=Material+Icons", :rel => "stylesheet"}/
    %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.1/css/materialize.min.css", :rel => "stylesheet"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body.body-connexion

  .row
    .col.s6.offset-s3
      .container
        = form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-connexion"}) do |f|
          .input-field
            %i.material-icons.prefix account_circle
            = f.text_field :email, autofocus: true, :id => "icon_prefix"
            %label{:for => "icon_prefix"} Ares ID
          .input-field
            %i.material-icons.prefix lock
            = f.password_field :password,  autocomplete: "off", :id => "mdp_prefix"
            %label{:for => "mdp_prefix"} Mot de passe
          .actions.center-align
            %button.btn.waves-effect.waves-light.btn-connexion{:name => "action", :type => "submit"}
              Connexion

  %footer
    %script{:src => "https://code.jquery.com/jquery-2.1.1.min.js", :type => "text/javascript"}
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.1/js/materialize.min.js"}
    :javascript
      $( document ).ready(function(){
          $(".button-collapse").sideNav();
          $('.dropdown-button').dropdown({
                belowOrigin: true, // Displays dropdown below the button
              }
          );
      });