= form_for @mailing do |f|
  - if @mailing.errors.any?
    .error
      %ul
        - @mailing.errors.full_messages.each do |msg|
          %li= msg
  - if @wrong_mail
    .error
      %ul
        %li L'email doit Ãªtre de la forme "exemple@ares-ensiie.eu"

  .field
    = f.label :nom
    = f.text_field :nom
  .field
    = f.label :mail
    = f.text_field :mail
  .field.select-field
    = f.label "Type"
    .input-field
      %select#select{:name => "mailing[type_mailing]"}
        = options_from_collection_for_select(@types, :name, :name)
  .actions
    %button.btn.waves-effect.waves-light{:name => "action", :type => "submit"}
      = texte


:javascript
  $(document).ready(

    function() { $("#select").select2({
      tags: true,
      createSearchChoice:function(term, data) {
        if ( $(data).filter( function() {
          return this.text.localeCompare(term)===0;
        }).length===0) {
          return {id:term, text:term};
        }
      }
    });

    $("#mailing_mail").val("@ares-ensiie.eu");
  });
